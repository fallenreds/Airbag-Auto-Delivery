{
    "sqltools.connections": [
        {
            "previewLimit": 50,
            "driver": "SQLite",
            "name": "Airbag DB",
            "database": "${workspaceFolder}/db.sqlite3"
        }
    ],
    "sqltools.useNodeRuntime": true,
    "python.defaultInterpreterPath": "${workspaceFolder}/venv/bin/python",
    "python.terminal.activateEnvironment": true,
    // Pylance / Pyright (как у PyCharm: умный IntelliSense, типы, автоимпорты)
    "python.analysis.typeCheckingMode": "basic", // можно "strict" когда будешь готов
    "python.analysis.autoImportCompletions": true,
    "python.analysis.stubPath": "typings",
    "python.analysis.inlayHints.functionReturnTypes": true,
    "python.analysis.inlayHints.variableTypes": true,
    // Lint & Format «как взрослые»
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
        "source.fixAll": "explicit",
        "source.organizeImports": "explicit",
        "source.fixAll.ruff": "explicit"
    },
    "python.formatting.provider": "black",
    "ruff.lsp.enable": true,
    "ruff.lint.enable": true,
    "ruff.format.enable": false,
    "ruff.organizeImports": true,
    // Django шаблоны
    "files.associations": {
        "**/templates/**/*.html": "django-html",
        "**/templates/**/*.jinja": "jinja-html"
    },
    "emmet.includeLanguages": {
        "django-html": "html"
    },
    // Тесты (pytest)
    "python.testing.pytestEnabled": true,
    "python.testing.unittestEnabled": false,
    "python.testing.pytestArgs": [
        "-q",
        "--disable-warnings",
        "--maxfail=1",
        "tests"
    ],
    // Подсветка ошибок по-пайтчармовски
    "errorLens.enabled": true,
    // Env-файл (если используешь секреты/переменные)
    "python.envFile": "${workspaceFolder}/.env",
    // Прочее удобство
    "editor.linkedEditing": true,
    "editor.hover.delay": 150,
    "editor.parameterHints.enabled": true
}